        <activity
            android:name="Activity.PersonActivity"
            android:label="Family Map">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.family_map_client.MainActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.PERSON"/>
            </intent-filter>
        </activity>

        <activity
            android:name="Activity.EventActivity"
            android:label="Family Map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.family_map_client.MainActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.EVENT"/>
            </intent-filter>
        </activity>


    </application>

